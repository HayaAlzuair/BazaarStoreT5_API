<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Smoke Suite" verbose="1">

    <!-- AuthenticationCRUD -->
    <test name="Authentication Smoke Tests">
        <classes>
            <class name="tests.AuthenticationCRUD.US1_RegisterNewUserAccount"/>
            <class name="tests.AuthenticationCRUD.US2_LoginAsRegisteredUser"/>
            <class name="tests.AuthenticationCRUD.US3_LogOutOfThePlatform"/>
            <class name="tests.AuthenticationCRUD.US4_GetCurrentUserProfileInformation"/>
        </classes>
    </test>

    <!-- FavoritesCRUD -->
    <test name="Favorites Smoke Tests">
        <classes>
            <class name="tests.FavoritesCRUD.US09_GETAllFavorites"/>
            <class name="tests.FavoritesCRUD.US10_POSTToFavorites"/>
            <class name="tests.FavoritesCRUD.US11_DELETEFromFavorites"/>
        </classes>
    </test>

    <!-- ProductsCRUD-->
    <test name="Products Smoke Tests">
        <classes>
            <class name="tests.ProductsCRUD.US12_BrowseAllProducts"/>
            <class name="tests.ProductsCRUD.US13_GETProductById"/>

        </classes>
    </test>

    <!-- StoreCRUD -->
    <test name="Store Smoke Tests">
        <classes>
            <class name="tests.StoreCRUD.US17_BrowseAllStores"/>
            <class name="tests.StoreCRUD.US18_CreateNewStore"/>
            <class name="tests.StoreCRUD.US19_ViewStoreDetails"/>
            <class name="tests.StoreCRUD.US20_UpdateExistingStore">
                <methods>
                    <include name="PUTStore"/>
                </methods>
            </class>
            <class name="tests.StoreCRUD.US21_DeleteStore"/>
        </classes>
    </test>

    <!-- UserCRUD -->
    <test name="User Smoke Tests">
        <classes>
            <class name="tests.UserCRUD.US22_BrowseAllUsers"/>
            <class name="tests.AuthenticationCRUD.US1_RegisterNewUserAccount">
                <methods>
                    <include name="happyPathOfRegister"/>
                </methods>
            </class>
            <class name="tests.UserCRUD.US23_ViewUserDetail">
                <methods>
                    <include name="GetSpecificUser"/>
                </methods>
            </class>
            <class name="tests.UserCRUD.US25_UpdateExistingUser"/>
            <class name="tests.UserCRUD.US26_DeleteUser"/>

        </classes>
    </test>

</suite>
















